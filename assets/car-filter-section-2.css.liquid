.search-filter-section {
  font-family: "helvetica";
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background-color: black;
  padding: 1em;
  max-width: 1350px;

}

.search-bar {
  display: flex;
  gap: 2em;
}

.search-filter form {}

.search-filter-section select,
.search-filter-section button {
  color: #000;
  padding: 0.5em;
  cursor: pointer;
  font-weight: bold;
  border: none;
  -webkit-appearance: none;
  -webkit-border-radius: 0;
}

.search-filter-section button {
  background-color: #e32020;
  color: white;
  font-weight: none;
  border: none;
  padding: 0.5em 1em;
}


.request-form-container button {
  font-size: 12px;
}

.filter-btn-visually-hidden {
  display: none;
}


@media(max-width: 800px) {

  .search-filter-inner-section {
    width: 100%;
  }

  .search-bar {
    flex-direction: column;
    width: 100%
  }
  .search-bar form {
    display: flex;
    flex-direction: column;
    gap: 1em;
    width: 100%;
  }
  .search-bar form select,
  .search-bar button {
    width: 100%;
  }
}